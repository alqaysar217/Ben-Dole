rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BANK FOOD ORDERING SYSTEM - SECURITY RULES
     * تم التحديث لضمان عمل أزرار الحذف والأرشفة للمدراء والمشرفين.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Branches & Departments: Publicly readable for navigation
    match /branches/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /departments/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Menu Items: Publicly readable for ordering
    match /menu_items/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Employees: Public read is REQUIRED for the selection dropdown and rotation engine.
    match /employees/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Orders: تفعيل كافة العمليات للمستخدمين المسجلين
    match /orders/{id} {
      allow read: if true;
      allow create, update, delete: if isSignedIn();
    }

    // Internal configuration
    match /_config_/{configId} {
      allow read, write: if false;
    }
  }
}