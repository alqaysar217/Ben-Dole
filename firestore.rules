rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * BANK FOOD ORDERING SYSTEM - SECURITY RULES
     * Deployment Trigger: 2024-05-20 18:45:00
     * Status: Explicitly allowing public read for all core collections to resolve listing issues.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    // Branches & Departments: Publicly readable for navigation
    match /branches/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    match /departments/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Menu Items: Publicly readable for ordering
    match /menu_items/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Employees: Public read is REQUIRED for the selection dropdown and rotation engine.
    match /employees/{id} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    // Orders: Anyone can create (requires anonymous auth for context)
    match /orders/{id} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn();
    }

    // Internal configuration
    match /_config_/{configId} {
      allow read, write: if false;
    }
  }
}