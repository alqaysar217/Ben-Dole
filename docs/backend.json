{
  "entities": {
    "Branch": {
      "title": "Branch",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "branchName": { "type": "string" }
      },
      "required": ["id", "branchName"]
    },
    "Department": {
      "title": "Department",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "branchId": { "type": "string" },
        "deptName": { "type": "string" }
      },
      "required": ["id", "branchId", "deptName"]
    },
    "Employee": {
      "title": "Employee",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "phone": { "type": "string" },
        "departmentId": { "type": "string" },
        "role": { "type": "string", "enum": ["Admin", "Supervisor", "Employee"] },
        "canRotate": { "type": "boolean" },
        "isDone": { "type": "boolean" },
        "rotationPriority": { "type": "number" }
      },
      "required": ["id", "name", "phone", "departmentId", "role", "canRotate", "isDone", "rotationPriority"]
    },
    "MenuItem": {
      "title": "MenuItem",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "itemName": { "type": "string" },
        "price": { "type": "number" },
        "category": { "type": "string", "enum": ["sandwich", "drink", "add-on"] }
      },
      "required": ["id", "itemName", "price", "category"]
    },
    "Order": {
      "title": "Order",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "employeeId": { "type": "string" },
        "departmentId": { "type": "string" },
        "items": { "type": "array", "items": { "type": "object" } },
        "totalPrice": { "type": "number" },
        "status": { "type": "string", "enum": ["pending", "completed", "cancelled"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "employeeId", "departmentId", "items", "totalPrice", "status", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "anonymous"]
  },
  "firestore": {
    "/branches/{branchId}": { "schema": "Branch", "description": "Bank branches" },
    "/departments/{departmentId}": { "schema": "Department", "description": "Departments within branches" },
    "/employees/{employeeId}": { "schema": "Employee", "description": "Employee data and roles" },
    "/menu_items/{menuItemId}": { "schema": "MenuItem", "description": "Food menu" },
    "/orders/{orderId}": { "schema": "Order", "description": "Food orders" }
  }
}